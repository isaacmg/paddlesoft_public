      <h2><%= pluralize(@possible.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% @possible.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions" >
  
   <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter your name" %>
