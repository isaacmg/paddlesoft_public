  <div class="field">
    <%= f.label :email%><br>
    <%= f.text_field :email, class:'form-control', id: "exampleInputEmail1", placeholder: "Enter email"  %>
  </div>
 
  <div class="field">
    <b> Receive weekly email updates</b>
    <p> You can choose to either receive weekly updates or only be notified when the beta test becomes availible and the software is released. </p>
    <%= f.check_box :receive %>
  </div>
  <div class="field">
  <%= f.label :humanizer_answer, @possible.humanizer_question %>
<%= f.text_field :humanizer_answer, class:'form-control' %>
<%= f.hidden_field :humanizer_question_id %>
</div>
  
    <%= f.submit 'Get updates', class: 'btn btn-warning' %>
  </div>
